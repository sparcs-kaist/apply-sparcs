    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^10.0.0",
    "koa-session": "^6.2.0",
    "mongoose": "^5.9.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/hapi__joi": "^17.1.7",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
