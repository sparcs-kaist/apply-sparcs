    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  }
}
